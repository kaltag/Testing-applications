<h1><%= t('.header') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>

    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.questions.count %></td>
        <% if test.questions.present? %>
          <td><%= button_to t('.start_button'), start_test_path(test) %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
