<h1 class="mx-5"><%= t('.header') %></h1>

<table class="table p-5">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>

    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.questions.count %></td>
        <% if test.questions.present? %>
          <td><%= button_to t('.start_button'), start_test_path(test) %> </td>
        <% else %>
          <td><%= t('.no_questions') %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
