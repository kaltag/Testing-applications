<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Category</th>
      <th>Questions</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.questions.count %></td>
        <% if test.questions.present? %>
          <td><%= button_to 'Start', start_test_path(test) %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
