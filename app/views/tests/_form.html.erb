<%= form_with(model: test) do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div>
    <%= form.label 'Введите название теста' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label 'Введите уровень сложности' %>
    <%= form.number_field :level %>
  </div>

  <div>
    <%= form.label 'Выберите категорию' %>
    <%= form.collection_select :category_id, Category.order(:title), :id, :title %>
  </div>

<%# TODO: пока нет @current_user, то пользователь выбирается руками %>
  <div>
    <%= form.label 'Выберите пользователя' %>
    <%= form.collection_select :user_id, User.order(:name), :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
