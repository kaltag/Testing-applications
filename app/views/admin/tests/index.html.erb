<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Category</th>
       <th>Questions</th>
      <th colspan='4'> Actions </th>
    </tr>
  </thead>

  <tbody>

    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.questions.count %></td>
        <td><%= link_to 'Show', admin_test_path(test) %></td>
        <td><%= link_to 'Edit', edit_admin_test_path(test) %></td>
        <td><%= link_to 'Destroy', admin_test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_admin_test_path %>
