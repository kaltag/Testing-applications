<h1 class="mx-5"><%= t('.header') %></h1>

<table class="table p-5">
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions') %></th>
      <th colspan='3'> <%= t('.actions') %> </th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.questions.count %></td>
        <td><%= link_to t('.show_test_button'), admin_test_path(test) %></td>
        <td><%= link_to t('.edit_test_button'), edit_admin_test_path(test) %></td>
        <td><%= link_to t('.delete_test_button'), admin_test_path(test), method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_test_button'), new_admin_test_path, class: 'mx-5 btn btn-success' %>
