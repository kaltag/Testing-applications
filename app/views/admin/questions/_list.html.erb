<h1><%= t('.questions_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.question_label') %></th>
      <th colspan='3'> <%= t('.actions') %> </th>
    </tr>
  </thead>

  <tbody>
    <% @test.questions.each do |question| %>
     <tr>
        <td><%= question.body %></td>
        <td><%= link_to t('.show_question_button'), admin_question_path(question) %></td>
        <td><%= link_to t('.edit_question_button'), edit_admin_question_path(question) %></td>
        <td><%= link_to t('.delete_question_button'), admin_question_path(question), method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_question_button'), new_admin_test_question_path(test_id: @test.id) %>
