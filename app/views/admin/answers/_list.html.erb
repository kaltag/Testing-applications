<p id="notice"><%= notice %></p>

<h1><%= t('.answers_label') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.answer_body') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.body %></td>
        <td><%= link_to t('.show_answer_button'), admin_answer_path(answer) %></td>
        <td><%= link_to t('.edit_answer_button'), edit_admin_answer_path(answer) %></td>
        <td><%= link_to t('.delete_answer_button'), admin_answer_path(answer), method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_answer_button'), new_admin_question_answer_path(question_id: @question.id) %>
