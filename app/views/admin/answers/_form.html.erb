<%= form_with model: [:admin, @question, answer] do |form| %>

  <%= render 'shared/errors', resource: @answer %>

  <div>
    <%= form.label 'Введите ответ' %>
    <%= form.text_field :body %>
  </div>

  <div>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
