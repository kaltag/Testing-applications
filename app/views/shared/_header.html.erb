<header>
  <% if user_signed_in? %>
    <h1><%= link_to 'TestGuru', root_path %></h1>
    <p class="nav user"> <%= t('.greeting') %> <b><%= current_user.email %></b> Guru |
        <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></p>
    <% else %>
    <p class="nav user">
      <%= link_to 'Log In', new_user_session_path %> or
      <%= link_to 'Sign Up', new_user_registration_path %>
    </p>
    <% end %>
</header>
